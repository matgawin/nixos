[
    {
        "bindings": {
            "alt-h": "workspace::ActivatePaneLeft",
            "alt-l": "workspace::ActivatePaneRight",
            "ctrl-k": null,
            "ctrl-k *": null
        }
    },
    {
        "context": "Editor && vim_mode == insert",
        "bindings": {
            "ctrl-h": "editor::Backspace",
            "ctrl-c": "editor::ShowEditPrediction"
        }
    },
    {
        "bindings": {
            "alt-a": "editor::AcceptEditPrediction",
            "ctrl-j": "editor::NextEditPrediction",
            "ctrl-k": "editor::PreviousEditPrediction",
            "ctrl-l": "editor::AcceptNextWordEditPrediction"
        },
        "context": "Editor && edit_prediction"
    },
    {
        "bindings": {
            "alt-x c": [
                "task::Spawn",
                {
                    "task_name": "open_vs_code"
                }
            ],
            "alt-x d": [
                "task::Spawn",
                {
                    "task_name": "hurl_run_dir"
                }
            ],
            "alt-x f": [
                "task::Spawn",
                {
                    "task_name": "hurl_run_file"
                }
            ],
            "alt-x g": [
                "task::Spawn",
                {
                    "task_name": "open_lazygit"
                }
            ],
            "alt-x s": [
                "task::Spawn",
                {
                    "task_name": "hurl_run_selected"
                }
            ]
        },
        "context": "Workspace"
    },
    {
        "bindings": {
            "ctrl-s": "workspace::SaveAll",
            "ctrl-`": "workspace::ToggleBottomDock"
        },
        "context": "Workspace"
    },
    {
        "bindings": {
            "ctrl-shift-tab": "pane::ActivatePreviousItem",
            "ctrl-tab": "pane::ActivateNextItem"
        },
        "context": "Pane"
    },
    {
        "bindings": {
            "S": "vim::PushAddSurrounds",
            "p": [
                "vim::Paste",
                {
                    "preserve_clipboard": true
                }
            ]
        },
        "context": "Editor && vim_mode == visual"
    },
    {
        "bindings": {
            "ctrl-,": null
        },
        "context": "Editor"
    },
    {
        "bindings": {
            "S": [
                "vim::PushSneakBackward",
                {}
            ],
            "s": [
                "vim::PushSneak",
                {}
            ]
        },
        "context": "Editor && vim_mode == normal"
    },
    {
      "context": "(Editor && edit_prediction_conflict)",
      "bindings": {
        "alt-tab": "editor::AcceptEditPrediction"
      }
    }
]